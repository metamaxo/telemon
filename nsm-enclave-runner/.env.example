# Logging
RUNNER_LOG_LEVEL=info

# Bind addresses (use localhost by default)
RUNNER_PUBLIC_ADDR=127.0.0.1:8443
RUNNER_HOST_ADDR=127.0.0.1:9443

# Host mTLS (uncomment to enable)
# RUNNER_HOST_CA_PEM_PATH=./ca.pem

# RA-TLS
RUNNER_RATLS_MIN_NONCE_LEN=16
RUNNER_RATLS_ADD_SERVER_AUTH_EKU=true
RUNNER_RATLS_QUOTE_OID=1,3,6,1,4,1,55555,1
RUNNER_RATLS_SAN_DNS=localhost
RUNNER_RATLS_SAN_IPS=127.0.0.1,::1

# Batch/flush
RUNNER_FRAME_SIZE=262144
RUNNER_MAX_BATCH_EVENTS=200
RUNNER_FLUSH_INTERVAL=300 # seconds
